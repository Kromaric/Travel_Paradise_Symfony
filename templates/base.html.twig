<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}TravelParadise!{% endblock %}</title>
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&family=Epilogue:wght@400;500;600&family=Open+Sans:wght@400;500&display=swap" rel="stylesheet">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
    <!-- Sidebar -->
    <div class="sidebar">
        <div class="sidebar-header">
            <img src="{{asset('assets/images/whatsapp_image_2025_05_28_at_18_27_27_1749274277647_206.png')}}" alt="Logo" class="sidebar-logo">
            <h2 class="sidebar-title">TravelParadise</h2>
        </div>
        <ul class="sidebar-menu">
            <li>
                <a href="#" class="active">
                    <i class="bi bi-house-door"></i>
                    Dashboard
                </a>
            </li>
            <li>
                <a href="#">
                    <i class="bi bi-person-badge"></i>
                    Tour Guides
                </a>
            </li>
            <li>
                <a href="#">
                    <i class="bi bi-geo-alt"></i>
                    Visits
                </a>
            </li>
            <li>
                <a href="#">
                    <i class="bi bi-graph-up"></i>
                    Statistics
                </a>
            </li>
            <li>
                <a href="#">
                    <i class="bi bi-people"></i>
                    Visitors
                </a>
            </li>
            <li>
                <a href="#">
                    <i class="bi bi-person"></i>
                    Users
                </a>
            </li>
            <li>
                <a href="#">
                    <i class="bi bi-box-arrow-right"></i>
                    Sign Out
                </a>
            </li>
        </ul>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <!-- Navbar -->
        <nav class="navbar navbar-custom">
            <div class="container-fluid p-0 d-flex align-items-center">
                <div class="d-flex align-items-center me-4">
                    <img src="{{asset('assets/images/whatsapp_image_2025_05_28_at_18_27_27_1749274277647_206.png')}}" alt="Logo" class="navbar-logo">
                    <span class="navbar-title">TravelParadise</span>
                    <span class="navbar-dashboard">Dashboard</span>
                </div>
                <div class="navbar-search">
                    <div class="search-box">
                        <i class="bi bi-search"></i>
                        <input type="text" class="search-input" placeholder="Search here...">
                    </div>
                </div>
                <div class="navbar-actions ms-auto">
                    <div class="language-selector">
                        <img src="https://flagcdn.com/us.svg" class="flag" alt="EN">
                        Eng (US)
                        <i class="bi bi-chevron-down"></i>
                    </div>
                    <div class="notification-btn">
                        <i class="bi bi-bell"></i>
                    </div>
                    <div class="profile-menu">
                        <div class="profile-image">
                            <img src="{{asset('assets/images/profile_8zlvs7_x_webp_1749274277646_593.png')}}" alt="Profile" class="img-fluid">
                        </div>
                        <div class="profile-info">
                            <span class="profile-name">Romaric</span>
                            <span class="profile-role">Admin</span>
                        </div>
                        <i class="bi bi-chevron-down"></i>
                    </div>
                </div>
            </div>
        </nav>

        {% block body %}{% endblock %}
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Toggle sidebar on mobile
        document.getElementById('sidebarToggle')?.addEventListener('click', function() {
            document.querySelector('.sidebar').classList.toggle('show');
        });
    </script>

    </body>
</html>
