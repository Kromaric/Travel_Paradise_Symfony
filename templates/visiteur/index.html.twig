{% extends 'layout.html.twig' %}

{% block title %}Visiteurs{% endblock %}

{% block content %}
    <div class="card">
        <h1 class="titre text-center">Liste des visiteurs</h1>
    </div>

    <a href="{{ path('app_visiteur_new') }}" class="btn btn-outline-success btn-circle btn-sm float-right mt-5">
        <i class="fas fa-plus"></i>
        Ajouter un visiteur
    </a>

    <div class="card mt-5">
        <table class="table table-striped table-hover table-bordered mt-1">
            <thead class="table-head-bg">
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Nom</th>
                    <th scope="col">Prenom</th>
                    <th scope="col">Mail</th>
                    <th scope="col">Addresse</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for visiteur in visiteurs %}
                <tr>
                    <td>{{ visiteur.id }}</td>
                    <td>{{ visiteur.nom }}</td>
                    <td>{{ visiteur.prenom }}</td>
                    <td>{{ visiteur.mail }}</td>
                    <td>{{ visiteur.addresse }}</td>
                    <td>
                        <a href="{{ path('app_visiteur_show', {'id': visiteur.id}) }}" class="btn btn-sm btn-info">Afficher</a>
                        <a href="{{ path('app_visiteur_edit', {'id': visiteur.id}) }}" class="btn btn-sm btn-primary">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6" class="text-center">Aucun visiteur trouv√©.</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
